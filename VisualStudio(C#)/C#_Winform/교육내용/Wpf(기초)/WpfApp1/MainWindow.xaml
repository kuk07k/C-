<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Orientation="Vertical">
        <!-- 스택패널 시작 -->
        <TextBlock Width="100" Height="40" Text="TextBlock"/>
        <TextBox Width="100" Height="35" Text="TextBox"/>
        <ProgressBar Width="100" Height="20" Value="300" Minimum="0" Maximum="500"/>
        <Slider Width="100" Height="30" Value="80" Minimum="0" Maximum="100"/>
        <PasswordBox Password="12345" Width="100" Height="30" PasswordChar="●"/>
    </StackPanel>
</Window>
